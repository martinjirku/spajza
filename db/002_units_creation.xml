<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="002" author="harry.hole">
        <comment>Units table creation</comment>
        <createTable tableName="units">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="datetime(3)"></column>
            <column name="updated_at" type="datetime(3)"></column>
            <column name="deleted_at" type="datetime(3)"></column>
            <column name="title" type="varchar(250)"></column>
            <column name="quantity" type="ENUM('unknown','mass','length','volume','temperature','time','count','bytes','bites','area','pressure')"></column>
            <column name="name" type="varchar(50)"></column>
            <column name="symbol" type="varchar(10)"></column>
            <column name="system" type="varchar(50)"></column>
        </createTable>
        <rollback>
            <dropTable tableName="units" />
        </rollback>
    </changeSet>

</databaseChangeLog>